<%- include('layout/header') %>
<style>body{background: #136a8a;background: -webkit-linear-gradient(to bottom, #267871, #136a8a);background: linear-gradient(to bottom, #267871, #136a8a);} tbody {border-top-color: whitesmoke;}</style>
    <div class="container contenido">
        <div class="col-lg-12 my-4">
            <div class="display-1 text-center mb-4"><b style="color: #333;
                -webkit-text-stroke: 1px #282828;
                text-shadow: 0px 4px 4px #282828;">EQUIPOS NBA</b></div>
            <div class="table-responsive">
                <% if (equipos !='' ) { //La tabla se crea si no está vacía la colección %>
                    <table class="table table-dark text-center align-middle shadow" id="tabla_Jugadores">
                        <thead>
                            <tr>
                                <!-- <th>ID</th> -->
                                <th class="pb-12 text-secondary-light">Escudo</th>
                                <th class="pb-12 text-secondary-light">Nombre</th>
                                <th class="pb-12 text-secondary-light">Ciudad</th>
                                <th class="pb-12 text-secondary-light">Estadio</th>
                            </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% equipos.forEach((row, index)=> { %>
                                <tr>
                                    <!-- <td><%= index %></td> -->
                                    <style>td img {height: 100px !important;object-fit: contain;}</style>
                                    <td><img src="/equipos/<%= row.escudo %>" width="130"></td>
                                    <td><%= row.nombre %></td>
                                    <td><%= row.ciudad %></td>
                                    <td><%= row.estadio %></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No hay equipos en la colección</h1>
                        <% } %>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>