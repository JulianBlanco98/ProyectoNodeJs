<%- include('layout/header') %>
<style>body{background-image: linear-gradient(120deg, #d4fc79 0%, #96e6a1 100%);}</style>
    <div class="container contenido">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-primary mb-2">
                        <h1 class="text-light text-center">Añadir Jugador</h1>
                    </div>
                    <div class="card-body p-4">
                        <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="nombre" class="mb-1">Nombre del Jugador</label>
                                <input type="text" name="nombre" id="nombre" class="form-control form-control-lg"
                                    placeholder="Insertar el nombre" required>
                            </div>
                            <div class="mb-3">
                                <label for="equipo" class="mb-1">Equipo</label>
                                <select id="equipo" name="equipo" class="form-select form-select-lg mb-3" aria-label="Large select example">
                                    <option selected>Selecciona el equipo</option>
                                    <% equipos.forEach(function(equipo) { %>
                                        <option value="<%= equipo.nombre %>"><%= equipo.nombre %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="posicion" class="mb-1">Posición</label>
                                <select id="posicion" name="posicion" class="form-select form-select-lg mb-3" aria-label="Large select example">
                                    <option selected>Selecciona la posicion</option>
                                    <option value="Base">Base</option>
                                    <option value="Escolta">Escolta</option>
                                    <option value="Alero">Alero</option>
                                    <option value="AlaPivot">AlaPivot</option>
                                    <option value="Pivot">Pivot</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="dorsal" class="mb-1">Dorsal</label>
                                <input type="text" name="dorsal" id="dorsal" class="form-control form-control-lg"
                                    placeholder="Dorsal del jugador" required>
                            </div>
                            <div class="mb-3">
                                <label for="imagen" class="form-label mb-1">Seleccionar Imagen</label>
                                <input type="file" name="imagen" id="imagen" class="form-control form-control-lg" required>
                            </div>
                            <div class="mb-3">
                                <img id="imagen-previa" src="#" alt="Vista previa de la imagen" style="width: 130px; height: 100px; object-fit: contain; display: none;">
                            </div>
                            <style> .flex-fill {width: 50%;} </style>
                            <div class="d-flex">
                                <input type="hidden" name="coleccion" value="Jugador" id="coleccion">
                                <input type="submit" value="Añadir" name="submit"
                                    class="btn btn-success btn-lg flex-fill me-2">
                                <input type="reset"  name="reset" class="btn btn-danger btn-lg flex-fill">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>
    <script>
        document.getElementById('imagen').addEventListener('change', function (event) {
            var imagenPrev = document.getElementById('imagen-previa');
            var file = event.target.files[0];
            var reader = new FileReader();
            reader.onload = function (event) {
                imagenPrev.src = event.target.result;
                imagenPrev.style.display = 'block';
            }
            reader.readAsDataURL(file);
        });
    </script>